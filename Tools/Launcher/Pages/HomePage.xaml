<Page x:Class="Launcher.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:Launcher.Controls"
      mc:Ignorable="d" 
      Height="480" Width="854"
      Title="HomePage" Loaded="Page_Loaded">
    <Grid>

        <Button x:Name="PlayButton" Content="PLAY" Margin="0,0,10,10" HorizontalAlignment="Right" Width="176" Height="67" VerticalAlignment="Bottom" FontSize="36" IsDefault="True" BorderBrush="{x:Null}" Background="#FF00FF80" Click="PlayButtonClick"/>
        <WebBrowser HorizontalAlignment="Left" Height="398" VerticalAlignment="Top" Width="844" Source="http://alumni.votc.xyz/Store/Index.html"/>
        <Button x:Name="VerifyFilesButton" Content="Verify Files" HorizontalAlignment="Left" Margin="10,450,0,0" VerticalAlignment="Top" Width="75" Background="#FF00FF74" BorderBrush="{x:Null}" Click="VerifyButtonClick"/>
        <controls:ClientFileItem x:Name="ClientFileItem"  Margin="10,0,191,35" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
