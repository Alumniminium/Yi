<Page x:Class="Launcher.Pages.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Launcher.Pages"
      mc:Ignorable="d" 
      Height="50" Width="500"
      Title="LoadingPage" Loaded="Page_Loaded">

    <Grid>
        <ProgressBar Height="50" IsIndeterminate="True" VerticalAlignment="Bottom" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#FF00FFA2"/>
        <TextBlock x:Name="textBlock" Margin="10,10,10,0" TextWrapping="Wrap" TextAlignment="Center" Text="Yi Launcher is starting..." VerticalAlignment="Top" Height="34" FontSize="22"/>

    </Grid>
</Page>
